@model Question

<h2>
    Ask anything you want here!
</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="title" class="form-label mt-4">Title</label>
        <input asp-for="title" class="form-control" placeholder="your question in few words...">
        <span asp-validation-for="title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="content" class="form-label mt-4">Description</label>
        <textarea asp-for="content" class="form-control" rows="4" spellcheck="false" placeholder="please elaborate your question in more details here..."></textarea>
        <span asp-validation-for="content" class="text-danger"></span>
    </div>

    <br /><br />

    <div class="form-group col-auto">
        <button type="submit" class="btn btn-outline-primary float-end">
            ASK &nbsp; <i class="bi bi-send"></i>
        </button>
    </div>
</form>

@section Scripts{ //this is for the client-side validation
@{
    <partial name="_ValidationScriptsPartial"></partial>
}
}